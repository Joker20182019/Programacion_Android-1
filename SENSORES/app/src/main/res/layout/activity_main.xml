<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/lbl_proximidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acelerometro"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/lbl_luz"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="145dp" />

    <TextView


        android:id="@+id/lbl_luz"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="@string/giro"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_proximidad" />

    <TextView
        android:id="@+id/txt_proximidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:paddingLeft="28dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/txt_luz"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/txt_luz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"

        android:paddingLeft="28dp"
        android:text="-"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.322"
        app:layout_constraintStart_toEndOf="@+id/lbl_luz"
        app:layout_constraintTop_toBottomOf="@+id/txt_proximidad" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>